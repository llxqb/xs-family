<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_white_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_86px"
        android:gravity="center"
        android:text="确认删除"
        android:textColor="@color/text_3333"
        android:textSize="@dimen/sp_34px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_30px"
        android:layout_marginBottom="@dimen/height_30px"
        android:layout_gravity="center_horizontal"
        android:text="确认删除这篇相册吗?"
        android:textColor="@color/text_3333"
        android:textSize="@dimen/sp_28px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/album_delete_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消"
            android:textColor="@color/app_grey"
            android:textSize="@dimen/sp_34px" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/com_line_bg" />

        <Button
            android:id="@+id/album_delete_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="确认"
            android:textColor="@color/app_grey"
            android:textSize="@dimen/sp_34px" />
    </LinearLayout>
</LinearLayout>