<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/moveoa_qj_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/moveoa_qj_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/user_workdrop_down2"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/moveoa_qj_right"
            android:layout_marginRight="@dimen/height_30px"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/height_30px"
            >

            <TextView
                android:id="@+id/moveoa_qj_createtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/com_left_right"
                android:layout_marginTop="@dimen/height_30px"
                android:textColor="@color/text_little_black"
                android:textSize="@dimen/sp_22px"
                />

            <TextView
                android:id="@+id/moveoa_qj_desction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_below="@id/moveoa_qj_createtime"
                android:layout_marginTop="@dimen/height_30px"
                android:layout_marginLeft="@dimen/com_left_right"
                />

            <TextView
                android:id="@+id/moveoa_qj_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_yellow_bg"
                android:padding="5dp"
                android:textColor="@color/yellow"
                android:textSize="@dimen/sp_18px"
                android:layout_marginTop="@dimen/height_30px"
                android:layout_marginLeft="@dimen/com_left_right"
                android:layout_below="@id/moveoa_qj_desction"
                />

            <LinearLayout
                android:id="@+id/moveoa_qj_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/moveoa_qj_state"
                android:layout_marginTop="@dimen/height_30px"
                android:layout_marginBottom="@dimen/height_30px"
                android:layout_marginLeft="@dimen/com_left_right"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/moveoa_relayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/moveoa_qj_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请假人：刘子古"
                        android:textColor="@color/text_little_black"
                        />
                    <TextView
                        android:id="@+id/moveoa_qj_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="请假时间："
                        android:textColor="@color/text_little_black"
                        android:layout_below="@id/moveoa_qj_name"
                        android:layout_marginTop="@dimen/height_30px"
                        />
                    <TextView
                        android:id="@+id/moveoa_qj_starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_little_black"
                        android:layout_below="@id/moveoa_qj_name"
                        android:layout_toRightOf="@id/moveoa_qj_date"
                        android:layout_marginLeft="@dimen/height_10px"
                        android:layout_marginTop="@dimen/height_30px"
                        />
                    <TextView
                        android:id="@+id/moveoa_qj_endtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_little_black"
                        android:layout_below="@id/moveoa_qj_name"
                        android:layout_toRightOf="@id/moveoa_qj_starttime"
                        android:layout_marginTop="@dimen/height_30px"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/moveoa_fy_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="@dimen/com_left_right">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/height_20px"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.bhxx.xs_family.views.CircleImageView
                                android:layout_width="@dimen/height_20px"
                                android:layout_height="@dimen/height_20px"
                                android:src="@color/app_grey" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="0.5dp"
                                android:background="@color/com_line_bg"></View>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.bhxx.xs_family.views.CircleImageView
                                android:layout_width="@dimen/height_20px"
                                android:layout_height="@dimen/height_20px"
                                android:src="@color/yellow" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="0.5dp"
                                android:background="@color/com_line_bg"></View>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.bhxx.xs_family.views.CircleImageView
                                android:layout_width="@dimen/height_20px"
                                android:layout_height="@dimen/height_20px"
                                android:src="@color/green" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/height_20px"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="已提交"
                            android:textSize="@dimen/sp_22px"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="待批准"
                            android:textSize="@dimen/sp_22px"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="已批准"
                            android:textSize="@dimen/sp_22px"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="2016.08.08 17:20"
                            android:textSize="@dimen/sp_22px"
                            android:textColor="@color/text_little_black"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="2016.08.08 17:20"
                            android:textSize="@dimen/sp_22px"
                            android:textColor="@color/text_little_black"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="2016.08.08 17:20"
                            android:textSize="@dimen/sp_22px"
                            android:textColor="@color/text_little_black"
                            />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg"/>
</LinearLayout>
