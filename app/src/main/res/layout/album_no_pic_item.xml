<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/com_left_right"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/height_40px"
        android:orientation="horizontal">

        <com.bhxx.xs_family.views.CircleImageView
            android:id="@+id/album_user_pic"
            android:layout_width="@dimen/height_58px"
            android:layout_height="@dimen/height_58px"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/height_20px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/album_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_3333"
                android:textSize="@dimen/sp_32px" />

            <TextView
                android:id="@+id/album_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_little_black"
                android:textSize="@dimen/sp_20px" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/album_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/com_left_right"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/height_30px"
        android:textColor="@color/text_little_black"
        android:textSize="@dimen/sp_28px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_30px">

        <LinearLayout
            android:id="@+id/album_like_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/com_left_right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/album_like_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/album_like" />

            <TextView
                android:id="@+id/album_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_10px"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_little_black"
                android:textSize="@dimen/sp_28px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/album_collect_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/height_30px"
            android:layout_toRightOf="@+id/album_like_layout"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/album_collect_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/album_collect" />

            <TextView
                android:id="@+id/album_collect_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_10px"
                android:layout_gravity="center_vertical"
                android:textColor="@color/text_little_black"
                android:textSize="@dimen/sp_28px" />
        </LinearLayout>

        <ImageView
            android:id="@+id/album_more_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="false"
            android:paddingLeft="@dimen/com_left_right"
            android:paddingRight="@dimen/com_left_right"
            android:src="@mipmap/album_more" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/com_left_right"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/height_40px"
        android:background="@color/com_line_bg" />
</LinearLayout>