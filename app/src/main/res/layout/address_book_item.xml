<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/address_book_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_120px"
    android:background="@color/white">

    <com.bhxx.xs_family.views.CircleImageView
        android:id="@+id/address_book_user_pic"
        android:layout_width="@dimen/height_80px"
        android:layout_height="@dimen/height_80px"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_avatar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/com_left_right" />

    <TextView
        android:id="@+id/address_book_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/height_20px"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_toRightOf="@+id/address_book_user_pic"
        android:singleLine="true"
        android:textColor="@color/text_3333"
        android:textSize="@dimen/sp_28px" />
</RelativeLayout>