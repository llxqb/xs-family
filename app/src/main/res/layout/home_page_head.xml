<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_310px">

        <android.support.v4.view.ViewPager
            android:id="@+id/parent_home_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/parent_home_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/height_16px"
            android:orientation="horizontal"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_400px"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/parent_model_bj"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/parent_icon_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_36px"
                    android:src="@mipmap/home_icon_bj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent_icon_1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_18px"
                    android:text="班级"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_28px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_model_xc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/parent_icon_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_36px"
                    android:src="@mipmap/home_icon_xc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent_icon_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_18px"
                    android:text="相册"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_28px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_model_sp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/parent_icon_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_36px"
                    android:src="@mipmap/home_icon_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent_icon_3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_18px"
                    android:text="食谱"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_28px" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/parent_model_zx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/parent_icon_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_36px"
                    android:src="@mipmap/home_icon_zx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent_icon_4"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_18px"
                    android:text="作息表"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_28px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_model_kt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/parent_icon_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_36px"
                    android:src="@mipmap/home_icon_kt" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent_icon_5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_18px"
                    android:text="小课堂"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_28px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_model_tx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/parent_icon_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_36px"
                    android:src="@mipmap/home_icon_tx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parent_icon_6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/height_18px"
                    android:text="通讯录"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_28px" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/height_30px"
        android:background="@color/com_line_bg" />

    <RelativeLayout
        android:id="@+id/parent_home_act_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height"
        android:background="@color/white">

        <View
            android:layout_width="5dp"
            android:layout_height="@dimen/height_28px"
            android:layout_centerVertical="true"
            android:background="@color/app_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/com_left_right"
            android:text="精选活动"
            android:textColor="@color/app_grey"
            android:textSize="@dimen/sp_28px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/com_left_right"
            android:src="@mipmap/home_morearrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />
</LinearLayout>