<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choice_act_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/choice_act_list_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_340px"
        android:layout_marginLeft="@dimen/com_left_right"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/height_30px"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/com_left_right"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/height_20px">

        <TextView
            android:id="@+id/choice_act_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/com_left_right"
            android:layout_toLeftOf="@+id/choice_act_list_state"
            android:singleLine="true"
            android:textColor="@color/text_3333"
            android:textSize="@dimen/sp_34px" />

        <ImageView
            android:id="@+id/choice_act_list_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_20px"
        android:layout_marginLeft="@dimen/com_left_right"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/height_20px">

        <TextView
            android:id="@+id/choice_act_list_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截止日期："
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_20px" />

        <TextView
            android:id="@+id/choice_act_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/choice_act_list_tx"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_20px" />

        <TextView
            android:id="@+id/choice_act_list_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_6666"
            android:textSize="@dimen/sp_20px" />
    </RelativeLayout>
</LinearLayout>