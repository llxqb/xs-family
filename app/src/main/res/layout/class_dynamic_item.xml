<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dynamic_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/class_dynamic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:layout_marginLeft="@dimen/com_left_right"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/height_70px"
        android:layout_toLeftOf="@+id/class_dynamic_img"
        android:textColor="@color/text_3333"
        android:textSize="@dimen/sp_32px" />

    <ImageView
        android:id="@+id/class_dynamic_img"
        android:layout_width="@dimen/height_210px"
        android:layout_height="@dimen/height_210px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/height_40px"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/class_dynamic_title"
        android:layout_marginLeft="@dimen/com_left_right"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/height_46px"
        android:layout_toLeftOf="@+id/class_dynamic_img">

        <TextView
            android:id="@+id/class_dynamic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/round_grey_bg"
            android:padding="5dp"
            android:textColor="@color/app_grey"
            android:textSize="@dimen/sp_18px" />

        <TextView
            android:id="@+id/class_dynamic_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/height_20px"
            android:layout_toRightOf="@+id/class_dynamic_type"
            android:textColor="@color/text_little_black"
            android:textSize="@dimen/sp_22px" />

        <TextView
            android:id="@+id/class_dynamic_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/height_20px"
            android:layout_toRightOf="@+id/class_dynamic_teacher"
            android:textColor="@color/text_little_black"
            android:textSize="@dimen/sp_22px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/class_dynamic_img"
        android:layout_marginLeft="@dimen/com_left_right"
        android:layout_marginRight="@dimen/com_left_right"
        android:layout_marginTop="@dimen/height_40px"
        android:background="@color/com_line_bg" />
</RelativeLayout>