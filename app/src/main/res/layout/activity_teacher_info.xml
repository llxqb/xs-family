<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_grey_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height"
        android:background="@color/com_grey_bg">

        <ImageView
            android:id="@+id/teacher_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/com_left_right"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/teacher_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_34px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/com_line_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/height_30px"
                android:background="@color/com_line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_160px"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.bhxx.xs_family.views.CircleImageView
                    android:id="@+id/teacher_info_head_pic"
                    android:layout_width="@dimen/height_124px"
                    android:layout_height="@dimen/height_124px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/com_left_right"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_avatar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/height_26px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/teacher_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_3333"
                        android:textSize="@dimen/sp_32px" />

                    <TextView
                        android:id="@+id/teacher_info_basic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_10px"
                        android:textColor="@color/text_little_black"
                        android:textSize="@dimen/sp_24px" />

                    <TextView
                        android:id="@+id/teacher_info_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/height_10px"
                        android:textColor="@color/text_little_black"
                        android:textSize="@dimen/sp_24px" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/com_line_bg" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/height_30px"
                android:background="@color/com_line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_86px"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/height_124px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/com_left_right"
                    android:gravity="center_vertical"
                    android:text="联系方式"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_28px" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/height_26px">

                    <TextView
                        android:id="@+id/teacher_info_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/teacher_info_msg"
                        android:singleLine="true"
                        android:textColor="@color/text_3333"
                        android:textSize="@dimen/sp_28px" />

                    <ImageView
                        android:id="@+id/teacher_info_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/com_left_right"
                        android:src="@mipmap/directories_call" />

                    <ImageView
                        android:id="@+id/teacher_info_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/teacher_info_call"
                        android:padding="@dimen/com_left_right"
                        android:src="@mipmap/directories_sms" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/com_left_right"
                android:background="@color/com_line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_86px"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/height_124px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/com_left_right"
                    android:gravity="center_vertical"
                    android:text="园所"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_28px" />

                <TextView
                    android:id="@+id/teacher_info_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/height_26px"
                    android:layout_marginRight="@dimen/com_left_right"
                    android:singleLine="true"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_28px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/com_left_right"
                android:background="@color/com_line_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/height_124px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_left_right"
                    android:layout_marginTop="@dimen/height_30px"
                    android:gravity="center_vertical"
                    android:text="介绍"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_28px" />

                <TextView
                    android:id="@+id/teacher_info_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/height_30px"
                    android:layout_marginLeft="@dimen/height_26px"
                    android:layout_marginRight="@dimen/com_left_right"
                    android:layout_marginTop="@dimen/height_30px"
                    android:textColor="@color/text_3333"
                    android:textSize="@dimen/sp_28px" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/com_line_bg" />

            <Button
                android:id="@+id/teacher_info_send_bt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_90px"
                android:layout_marginLeft="@dimen/margin_50px"
                android:layout_marginRight="@dimen/margin_50px"
                android:layout_marginTop="@dimen/margin_50px"
                android:background="@drawable/round_grey_match_bg"
                android:text="发消息"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_34px" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>