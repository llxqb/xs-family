<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_grey"
    android:orientation="vertical">

    <!--这个是隐藏的布局，然后通过动态的设置高度达到效果-->
    <LinearLayout
        android:id="@+id/ll_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_grey"
        android:orientation="vertical"
        android:visibility="gone">
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_title_height"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_34px" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/height_114px"
        android:src="@mipmap/login_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_50px"
        android:layout_marginRight="@dimen/margin_50px"
        android:layout_marginTop="@dimen/height_131px">

        <ImageView
            android:id="@+id/login_user_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_user_pre" />

        <EditText
            android:id="@+id/login_user_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/height_15px"
            android:layout_toRightOf="@id/login_user_icon"
            android:alpha="0.6"
            android:background="@null"
            android:hint="请输入用户名"
            android:inputType="number"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/sp_28px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_50px"
        android:layout_marginRight="@dimen/margin_50px"
        android:layout_marginTop="@dimen/height_30px"
        android:alpha="0.6"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_50px"
        android:layout_marginRight="@dimen/margin_50px"
        android:layout_marginTop="@dimen/height_66px">

        <ImageView
            android:id="@+id/login_pwd_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/login_password_pre" />

        <EditText
            android:id="@+id/login_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/height_15px"
            android:layout_toRightOf="@id/login_pwd_icon"
            android:alpha="0.6"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/sp_28px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_50px"
        android:layout_marginRight="@dimen/margin_50px"
        android:layout_marginTop="@dimen/height_30px"
        android:alpha="0.6"
        android:background="@color/white" />

    <TextView
        android:id="@+id/forget_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_50px"
        android:layout_marginRight="@dimen/margin_50px"
        android:alpha="0.6"
        android:gravity="right"
        android:paddingBottom="@dimen/height_30px"
        android:paddingTop="@dimen/height_30px"
        android:text="忘记密码?"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_28px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/login_bt"
            android:layout_width="@dimen/height_440px"
            android:layout_height="@dimen/height_90px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/height_160px"
            android:background="@drawable/yellow_bt"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_34px" />
    </RelativeLayout>

</LinearLayout>
